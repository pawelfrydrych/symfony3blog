{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"/>
{% endblock %}
{% block body %}
    <h1>{{ post.title }}</h1>
    <div>
        <p>{{ post.lead }}</p>
        <p>{{ post.content }}</p>
        <span>Dodano: {{ post.createdAt | date('H:i d/m/Y') }}</span>
        <hr/>
        <h3>Komentarze</h3>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

