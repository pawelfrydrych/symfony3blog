{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
{% endblock %}
{% block body %}
    <div id="container">
        <div id="intro">
            <div id="pageHeader">
                <a href="{{ path('homepage') }}"><h1><span>Blog</span></h1></a>
            </div>
            <div id="preamble">
                <h3><span>Witaj na moim blogu</span></h3>
            </div>
        </div>

        <div id="supportingText">
            {% for post in posts %}
                <div id="explanation">
                    <a href="{{ path('post_show', {'id': post.id}) }}"><h2>{{ post.title | raw}}</h2></a>
                    <div><a>Dodano: {{ post.createdAt | date('d/m/Y') }}</a></div>

                    {% if post.image %}
                        <img width="200" height="200" src="{{ post.image }}"/>
                    {% endif %}

                    <p class="p1"> {{ post.lead | raw}}</p>
                </div>
            {% endfor %}

            <div style="display: ruby">
                {{ knp_pagination_render(posts) }}
            </div>
            <div id="footer">
                Copyright Â© 2006 Your Company Name
            </div>

        </div>

        <div id="linkList">
            <div id="linkList2">
                <div id="lselect">
                    <ul>
                        <li><a href="{{ path('homepage') }}">Home</a></li>
                        <li><a href="{{ path('homepage') }}">About Us</a></li>
                        <li><a href="{{ path('homepage') }}">News</a></li>
                        <li><a href="{{ path('homepage') }}">Contact</a></li>
                        <li><a href="{{ path('homepage') }}">Links</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

