{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"/>
{% endblock %}
{% block body %}
    <h1>Blog</h1>
    <br/>
    <br/>
    {% for post in posts %}
        <div>
            <div class="card bg-light mb-3" style="margin-top: 5px">
                <div class="card-header">
                    <div><a href="{{ path('post_show', {'id': post.id}) }}"><h2>{{ post.title }}</h2></a></div>
                    <div style="text-align: right"><a>Dodano: {{ post.createdAt | date('H:i d/m/Y') }}</a></div>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ post.lead }}</p>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>

{% endblock %}

